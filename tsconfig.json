{
  "extends": "ts-node/node16/tsconfig.json",

  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",

    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false
  },
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}