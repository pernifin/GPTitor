{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node16",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "ts-node": {
    "files": true,
    "esm": true
  },
  "extends": "ts-node/node16/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}