{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",

    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "outDir": "./dist"
  },
  "ts-node": {
    "files": true,
    "esm": true
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}